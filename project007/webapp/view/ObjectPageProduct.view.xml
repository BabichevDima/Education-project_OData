<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:personal="webapp.controller.blocks" controllerName="webapp.controller.ObjectPageProduct" height="100%">
	<ObjectPageLayout id="ObjectPageProduct" enableLazyLoading="true" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<breadcrumbs>
					<m:Breadcrumbs>
						<m:Link text="{i18n>CategoriesOverview}" press="onNavToCategoriesOverview"/>
						<m:Link text="{i18n>Category}" press="onNavToCategory"/>
						<m:Link text="{i18n>Product}"/>
					</m:Breadcrumbs>
				</breadcrumbs>
				<expandedHeading>
					<m:Title text="{oData>Name}" wrapping="true"/>
				</expandedHeading>
				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Title text="{oData>Name}" wrapping="true"/>
					</m:FlexBox>
				</snappedHeading>
				<actions>
					<m:Button text="Edit" type="Emphasized"/>
					<m:Button type="Transparent" text="Delete"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="{i18n>Description}:"/>
					<m:VBox>
						<m:Text text="{oData>Description}"/>
					</m:VBox>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="{i18n>Info}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<personal:PersonalFormBlock id="personalinfo" columnLayout="3"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection titleUppercase="false" title="{i18n>Suppliers}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table id="ProductsTableSuppliers" sticky="HeaderToolbar,ColumnHeaders" width="auto" mode="MultiSelect" items="{oData>/Suppliers}">
								<m:headerToolbar>
									<m:Toolbar class="sapUiMediumMarginTop">
										<m:Title text="{i18n>Suppliers}" level="H2"/>
										<m:ToolbarSpacer/>
										<m:SearchField id="SuppliersSearch" placeholder="{i18n>PlaceholderSerchProduct}" width="300px"/>
										<m:Button id="CreateButton" type="Accept" ariaHasPopup="Dialog" icon="sap-icon://create" text="{i18n>ButtonCreate}"/>
										<m:Button id="DeleteButton" type="Reject" icon="sap-icon://delete" text="{i18n>ButtonDelete}" class="sapUiSmallMarginBeginEnd"/>
									</m:Toolbar>
								</m:headerToolbar>
								<m:columns>
									<m:Column minScreenWidth="Tablet" demandPopin="true">
										<m:Text text="{i18n>Name}"/>
									</m:Column>
									<m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
										<m:Text text="{i18n>ID}" class="sapUiSmallMarginEnd"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:Text text="{oData>Name}"/>
										<m:Text text="{oData>ID}" class="sapUiSmallMarginEnd"/>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>