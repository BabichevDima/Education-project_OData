<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:personal="webapp.controller.blocks"
	xmlns:additional="webapp.controller.blocks" controllerName="webapp.controller.ObjectPageProduct" height="100%">
	<ObjectPageLayout id="ObjectPageProduct" enableLazyLoading="true" upperCaseAnchorBar="false" showFooter="{stateModel>/EditMode}">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<breadcrumbs>
					<m:Breadcrumbs>
						<m:Link text="{i18n>CategoriesOverview}" press="navigate('ListReport')"/>
						<m:Link text="{i18n>Category}" press="onNavToCategory"/>
						<m:Link text="{i18n>Product}"/>
					</m:Breadcrumbs>
				</breadcrumbs>
				<expandedHeading>
					<m:Title text="{Name}" wrapping="true"/>
				</expandedHeading>
				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Title text="{Name}" wrapping="true"/>
					</m:FlexBox>
				</snappedHeading>
				<actions>
					<m:Button text="Edit" type="Emphasized" press="onEditButton"/>
					<m:Button type="Transparent" text="Delete" press="onDeleteProductButton"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="{i18n>Description}:"/>
					<m:VBox>
						<m:Text text="{Description}"/>
						<m:Text text="{stateModel>/EditMode}"/>
					</m:VBox>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>
		<sections>
			<ObjectPageSection titleUppercase="false" title="{i18n>Info}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<personal:PersonalFormBlock id="personalinfo" columnLayout="3"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="{i18n>AdditionalInfo}">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<additional:AdditionalInformation id="additionalInformation" columnLayout="2"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
		</footer>
	</ObjectPageLayout>
</mvc:View>