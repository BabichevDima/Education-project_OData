<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns:forms="sap.ui.layout.form"
	xmlns="sap.m">
	<forms:Form width="100%" editable="true" >
		<forms:formContainers>
			<forms:FormContainer id="addressInfo" title="{i18n>Info}">
				<forms:formElements>
					<forms:FormElement label="{i18n>Description}">
						<Text text="{Description}" visible="{= !${stateModel>/EditMode}}"/>
						<Input fieldGroupIds="groupEditValueProduct" liveChange="checkField" value="{ path: 'Description', type: 'sap.ui.model.type.String', constraints: {search: '^[A-Za-zА-Яа-яЁё\\s]+$', minLength: 1, maxLength: 70}}" visible="{stateModel>/EditMode}"/>
					</forms:FormElement>

					<forms:FormElement label="{i18n>Rating}">
						<RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{Rating}" tooltip="Rating Product" editable="{stateModel>/EditMode}"/>
					</forms:FormElement>

					<forms:FormElement label="{i18n>ReleaseDate}">
						<Text visible="{= !${stateModel>/EditMode}}" text="{path: 'ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'MMM dd YYYY'}}"/>
						<DatePicker change="checkField" fieldGroupIds="groupEditValueProduct" value="{path: 'ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd YYYY'}}" visible="{stateModel>/EditMode}"/>
					</forms:FormElement>

					<forms:FormElement label="{i18n>DiscontinuedDate}">
						<Text visible="{= !${stateModel>/EditMode}}" text="{path: 'DiscontinuedDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'MMM dd YYYY'}}"/>
						<DatePicker change="checkField" fieldGroupIds="groupEditValueProduct" value="{path: 'DiscontinuedDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MMM dd YYYY'}}" visible="{stateModel>/EditMode}"/>
					</forms:FormElement>

					<forms:FormElement label="{i18n>Price}">
						<ObjectNumber visible="{= !${stateModel>/EditMode}}" number="{ path: 'Price', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }" state="{= ${Price} > 20 ? 'Error' : 'Success'}" unit="EUR"/>
						<Input fieldGroupIds="groupEditValueProduct" liveChange="checkField" type="Number" value="{ path: 'Price', type: 'sap.ui.model.type.String', constraints: {search: '^[0-9]', minimum: 1}}" visible="{stateModel>/EditMode}"/>
					</forms:FormElement>
				</forms:formElements>
			</forms:FormContainer>
		</forms:formContainers>
	</forms:Form>
</mvc:View>
